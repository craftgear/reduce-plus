{
  "name": "reduce-plus",
  "version": "1.0.3",
  "description": "extra reduce functionalities, like async, split and chunk",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "eslint --ignore-pattern *.spec.ts ./src/** && tsc --noEmit --pretty && jest --maxWorkers=4 src ",
    "build": "tsc --declaration"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:craftgear/reduce-plus.git"
  },
  "keywords": [
    "reduce",
    "array",
    "async",
    "split",
    "chunk",
    "functional programming"
  ],
  "author": "Shunsuke Watanabe <craftgear@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.2",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-import": "^2.16.0",
    "jest": "^26.6.0",
    "prettier": "^1.16.4",
    "ts-jest": "^26.4.1",
    "typescript": "^3.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "testPathIgnorePatterns": [
      "\\.snap$",
      "built",
      "<rootdir>/node_modules"
    ],
    "cacheDirectory": ".jest/cache",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
